<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark1"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="613dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@color/colorPrimaryDark1"
                android:orientation="horizontal"
                android:layout_marginLeft="0dp">

                <TextView
                    android:id="@+id/total_student1"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="15dp"
                    android:text="Your Token number"

                    android:textColor="@color/colorAccent1"
                    android:textSize="15sp"

                    android:textStyle="italic"
                    tools:ignore="DuplicateIds"
                    android:layout_marginLeft="50dp" />

                <EditText
                    android:id="@+id/my_token_number"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/colorAccent1"
                    android:textSize="15sp"

                    android:textStyle="italic"
                    android:layout_marginLeft="50dp" />

            </LinearLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="2dp" />


            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="488dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Troli_deshboard"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@color/colorAccent"
                    android:padding="5dp"
                    android:text="Token dashboard"
                    android:textColor="@color/colorAccent1"
                    android:textSize="20sp"

                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="374dp"
                    android:layout_height="143dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="353dp"
                            android:layout_height="33dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/total_student"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="10dp"
                                android:background="@color/colorPrimary1"
                                android:gravity="center"
                                android:text="Current weighted Token"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"

                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/current_weighted_trolley"
                                android:layout_width="144dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="40dp"
                                android:background="@color/colorPrimary1"
                                android:gravity="center"
                                android:inputType="number"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"

                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="354dp"
                            android:layout_height="33dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/farmer_name"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:background="@color/colorPrimary1"
                                android:gravity="center"
                                android:text="Farmer name"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/farmer_namet"
                                android:layout_width="144dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="50dp"
                                android:background="@color/colorPrimary1"
                                android:gravity="center"
                                android:inputType="textPersonName"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"
                                android:textStyle="italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="354dp"
                            android:layout_height="33dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/total_student"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:background="@color/colorPrimary1"
                                android:gravity="center"
                                android:text="Current issued Token"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/current_issue_token_number"
                                android:layout_width="144dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="50dp"
                                android:gravity="center"
                                android:inputType="number"
                                android:background="@color/colorPrimary1"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"

                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="354dp"
                            android:layout_height="33dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/total_student"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:background="@color/colorPrimary1"
                                android:gravity="center"
                                android:text="Your Token number"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/yr_token_number"
                                android:layout_width="144dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="50dp"
                                android:background="@color/colorPrimary1"
                                android:gravity="center"
                                android:inputType="number"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"

                                android:textStyle="italic" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/Troli_deshboard1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@color/colorAccent"
                    android:padding="5dp"
                    android:text="Troli dashboard"
                    android:textColor="@color/colorAccent1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="374dp"
                    android:layout_height="143dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="354dp"
                            android:layout_height="33dp"
                            android:layout_marginStart="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/total_troli"
                                android:layout_width="145dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:background="@color/colorPrimary1"
                                android:gravity="center"
                                android:text="Total Trolley On Platform"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/total_troli_on"
                                android:layout_width="144dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="45dp"
                                android:background="@color/colorPrimary1"
                                android:gravity="center"
                                android:inputType="number"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"

                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="354dp"
                            android:layout_height="33dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/troli_btwn"
                                android:layout_width="145dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:background="@color/colorPrimary1"
                                android:gravity="center"
                                android:text="Trolley between you"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/trolly_btwn"
                                android:layout_width="144dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="45dp"
                                android:background="@color/colorPrimary1"
                                android:gravity="center"
                                android:inputType="number"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"

                                android:textStyle="italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="354dp"
                            android:layout_height="33dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/missing_troli"
                                android:layout_width="145dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:background="@color/colorPrimary1"
                                android:gravity="center"
                                android:text="Missed Trolley"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/missed_trolly_number"
                                android:layout_width="144dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="45dp"
                                android:background="@color/colorPrimary1"
                                android:gravity="center"
                                android:inputType="number"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"
                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="354dp"
                            android:layout_height="33dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/locked_trolly"
                                android:layout_width="145dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:background="@color/colorPrimary1"
                                android:text="Locked Trolley"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"
                                android:gravity="center"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/loked_trolly"
                                android:layout_width="144dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="45dp"
                                android:background="@color/colorPrimary1"
                                android:gravity="center"
                                android:inputType="number"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"
                                android:textStyle="italic" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/Troli_deshboard1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@color/colorAccent"
                    android:padding="5dp"
                    android:text="Reminder dashboard"
                    android:textColor="@color/colorAccent1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="374dp"
                    android:layout_height="88dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="354dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/total_troli"
                                android:layout_width="145dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:background="@color/colorPrimary1"
                                android:text="How many trolley between you"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"
                                android:gravity="center"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/total_troli_number"
                                android:layout_width="144dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="45dp"
                                android:background="@color/colorPrimary1"
                                android:hint="Enter troli number..."
                                android:gravity="center"
                                android:inputType="number"
                                android:textColor="@color/colorAccent1"
                                android:textSize="13sp"
                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="335dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn"
                                android:layout_width="334dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="25dp"
                                android:background="@color/colorAccent2"
                                android:gravity="center"
                                android:text="Set Reminder"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>





