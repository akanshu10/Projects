<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Teacher.TeacherFragment" >

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="340dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/teacher_deshboard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:text="Teacher deshboard"
            android:textSize="20sp"

            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="384dp"
            android:layout_height="277dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="278dp"
                android:layout_height="258dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="206dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/total_teachers"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"

                        android:layout_marginStart="10dp"
                        android:text="Total Teacher"
                        android:textSize="15sp"

                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/total_teacher_number"
                        android:layout_width="65dp"
                        android:layout_height="31dp"

                        android:layout_marginStart="36dp"
                        android:text="41"
                        android:textSize="15sp"

                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="206dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Today_tprasent"
                        android:layout_width="102dp"
                        android:layout_height="46dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Today Prasent Teacher"
                        android:textSize="15sp"

                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/total_tptasent_number"
                        android:layout_width="63dp"
                        android:layout_height="46dp"
                        android:layout_marginStart="30dp"

                        android:layout_marginTop="5dp"
                        android:text="41"
                        android:textSize="15sp"

                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/view_teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:layout_marginStart="40dp"

                        android:text="view Teachers deshboard"

                        android:textSize="15sp"

                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/text_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>