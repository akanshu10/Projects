<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".college.addguardiannxtActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="10dp"
        android:background="@color/back">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/guardianregistrationform"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:background="#F8F3F3"
            android:text="Guardian Registration Form"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/guardianregistrationform"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:background="#F8F3F3"
            android:text="Part (II)"
            android:textSize="30dp"
            android:textStyle="bold"/>


    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="false"
        android:background="@color/back"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="135dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/parsenaldetailstext"
                        android:text="Upload document"
                        android:textSize="22sp"
                        android:textColor="#000000"
                        android:textStyle="bold"

                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                >
                                <TextView
                                    android:id="@+id/uploadgimgtext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Upload guardian Image"
                                    android:textSize="17sp"
                                    android:textColor="#698E2D"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />
                                <TextView
                                    android:id="@+id/viewgimgtext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View Image"
                                    android:textSize="17sp"
                                    android:textColor="#D62A2A"
                                    android:layout_marginStart="280dp"
                                    android:layout_marginLeft="20dp" />
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="160dp"
                                    android:id="@+id/guardianimg"
                                    android:background="@color/back"
                                    android:layout_below="@+id/uploadgimgtext"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="0dp"
                                    android:layout_marginLeft="30dp" />
                                <TextView
                                    android:id="@+id/uploadgsigntext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Upload guardian Signature"
                                    android:layout_below="@+id/guardianimg"
                                    android:textSize="17sp"
                                    android:textColor="#698E2D"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />
                                <TextView
                                    android:id="@+id/viewgsigntext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View Image"
                                    android:layout_below="@+id/guardianimg"
                                    android:textSize="17sp"
                                    android:textColor="#D62A2A"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginStart="280dp"
                                    android:layout_marginLeft="20dp" />

                                <ImageView
                                    android:id="@+id/gsignimg"
                                    android:layout_width="120dp"
                                    android:layout_height="40dp"
                                    android:background="@color/back"
                                    android:layout_below="@+id/uploadgsigntext"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="20dp" />


                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="#F8F7F6">

                        <Button
                            android:id="@+id/gback2btn"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="#3149CD"
                            android:text="Back" />
                        <Button
                            android:id="@+id/gsubmitbtn"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="300dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="#3149CD"
                            android:text="Submit"
                            android:layout_marginLeft="300dp" />

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>