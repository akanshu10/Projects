<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".college.addguardianActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="10dp"
        android:background="@color/back">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/guardianregistrationform"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:background="#F8F3F3"
            android:text="Guardian Registration Form"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/guardianregistrationform"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:background="#F8F3F3"
            android:text="Part (I)"
            android:textSize="30dp"
            android:textStyle="bold"/>


    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="false"
        android:background="@color/back"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="135dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/parsenaldetailstext"
                        android:text="Parsonal details"
                        android:textSize="22sp"
                        android:textColor="#000000"
                        android:textStyle="bold"

                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                >

                                <TextView
                                    android:id="@+id/guardianfullnametext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Guardian Full Name"
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/guardianfullnameedit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/guardianfullnametext"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginLeft="20dp" />
                                <TextView
                                    android:id="@+id/gstudentnametext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Student Name"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/ggenderedit"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/gstudentnameedit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/gstudentnametext"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <TextView
                                    android:id="@+id/ggendertext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gender"
                                    android:layout_below="@+id/guardianfullnameedit"
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/ggenderedit"
                                    android:layout_below="@+id/ggendertext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />
                                <TextView
                                    android:id="@+id/gstudentidtext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Student Registration No."
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_below="@+id/gstudentnameedit"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/gstudentidedit"
                                    android:layout_below="@+id/gstudentidtext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />



                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/communicationdetailstext"
                        android:text="Communication details"
                        android:textSize="22sp"
                        android:textColor="#000000"
                        android:textStyle="bold"

                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                >

                                <TextView
                                    android:id="@+id/gmobiletext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mobile no."
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/gMobileedit"
                                    android:layout_below="@+id/gmobiletext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:inputType="number"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />
                                <TextView
                                    android:id="@+id/gemailtext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_below="@+id/gMobileedit"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/emailedit"
                                    android:layout_below="@+id/gemailtext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:inputType="textEmailAddress"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="#F8F7F6">

                        <Button
                            android:id="@+id/gbackbtn"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="#3149CD"
                            android:text="Back" />
                        <Button
                            android:id="@+id/gnxtbtn"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="300dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="#3149CD"
                            android:text="Next"
                            android:layout_marginLeft="300dp" />

                    </RelativeLayout>
                </LinearLayout>



            </RelativeLayout>
        </LinearLayout>



    </ScrollView>

</RelativeLayout>