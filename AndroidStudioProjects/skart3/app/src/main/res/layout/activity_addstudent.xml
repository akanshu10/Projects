<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".college.AddstudentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="10dp"
        android:background="@color/back">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/addmissionform"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:background="#F8F3F3"
            android:text="Addmission Form"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/addmissionform"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:background="#F8F3F3"
            android:text="Part (I)"
            android:textSize="30dp"
            android:textStyle="bold"/>


    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="false"
        android:background="@color/back"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="135dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/parsenaldetailstext"
                        android:text="Parsonal details"
                        android:textSize="22sp"
                        android:textColor="#000000"
                        android:textStyle="bold"

                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                >

                                <TextView
                                    android:id="@+id/fullnametext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Full Name"
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/fullnameedit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/fullnametext"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginLeft="20dp" />
                                <TextView
                                    android:id="@+id/fathernametext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Father Name"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/fullnameedit"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/fathernameedit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/fathernametext"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <TextView
                                    android:id="@+id/Mothernametext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mother Name"
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_below="@+id/fathernameedit"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/mothernameedit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:layout_below="@+id/Mothernametext"
                                    android:textSize="17sp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <TextView
                                    android:id="@+id/dobtext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Date of Birth"
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_below="@+id/mothernameedit"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/dobedit"
                                    android:layout_below="@+id/dobtext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:inputType="date"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />
                                <TextView
                                    android:id="@+id/gendertext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gender"
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_below="@+id/dobedit"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/genderedit"
                                    android:layout_below="@+id/gendertext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />
                                <TextView
                                    android:id="@+id/catogrytext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Category"
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_below="@+id/genderedit"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/categoryedit"
                                    android:layout_below="@+id/catogrytext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />
                                <TextView
                                    android:id="@+id/religiontext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Religion"
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_below="@+id/categoryedit"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/religionedit"
                                    android:layout_below="@+id/religiontext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/communicationdetailstext"
                        android:text="Communication details"
                        android:textSize="22sp"
                        android:textColor="#000000"
                        android:textStyle="bold"

                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                >

                                <TextView
                                    android:id="@+id/villagetext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Village/House no./Colony"
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/villageedit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/villagetext"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginLeft="20dp" />
                                <TextView
                                    android:id="@+id/posttext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Post Office"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/villageedit"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/postedit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/posttext"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <TextView
                                    android:id="@+id/citytext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="City"
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_below="@+id/postedit"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/cityedit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:layout_below="@+id/citytext"
                                    android:textSize="17sp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <TextView
                                    android:id="@+id/disttext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="District"
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_below="@+id/cityedit"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/distedit"
                                    android:layout_below="@+id/disttext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />
                                <TextView
                                    android:id="@+id/statetext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="State"
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_below="@+id/distedit"
                                    android:layout_marginLeft="20dp" />


                                <EditText
                                    android:id="@+id/stateedit"
                                    android:layout_below="@+id/statetext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />
                                <TextView
                                    android:id="@+id/pintext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pin Code"
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_below="@+id/stateedit"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/pinedit"
                                    android:layout_below="@+id/pintext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <TextView
                                    android:id="@+id/mobiletext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mobile no."
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_below="@+id/pinedit"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/Mobileedit"
                                    android:layout_below="@+id/mobiletext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:inputType="number"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />
                                <TextView
                                    android:id="@+id/emailtext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_below="@+id/Mobileedit"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/emailedit"
                                    android:layout_below="@+id/emailtext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:inputType="textEmailAddress"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/qualifyingdetailstext"
                        android:text="Qualifying School Details"
                        android:textSize="22sp"
                        android:textColor="#000000"
                        android:textStyle="bold"

                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                >

                                <TextView
                                    android:id="@+id/qschooltext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Qualifying School Name"
                                    android:textSize="17sp"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />

                                <EditText
                                    android:id="@+id/qschooledit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/qschooltext"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginLeft="20dp" />
                                <TextView
                                    android:id="@+id/qschooladdtext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Qualying School Address"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/qschooledit"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />
                                <EditText
                                    android:id="@+id/qschooladdedit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/qschooladdtext"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginLeft="20dp" />

                                <TextView
                                    android:id="@+id/qsujecttobtainedmarkstext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Obtained Marks"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/qschooladdedit"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />
                                <EditText
                                    android:id="@+id/qsubjecttobtainedmarkedit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:inputType="number"
                                    android:layout_below="@+id/qsujecttobtainedmarkstext"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginLeft="20dp" />

                                <TextView
                                    android:id="@+id/qsujecttmaxmarkstext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Maximum Marks"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/qsubjecttobtainedmarkedit"
                                    android:textColor="#000000"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp" />
                                <EditText
                                    android:id="@+id/qsubjecttmaxmarkedit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="17sp"
                                    android:inputType="number"
                                    android:layout_below="@+id/qsujecttmaxmarkstext"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginLeft="20dp" />


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/qualifyingsubjectstext"
                        android:text="Qualifying Subjects Details"
                        android:textSize="22sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp">

                                <TextView
                                    android:id="@+id/qsubjecttext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:text="Subject Name"
                                    android:textColor="#000000"
                                    android:textSize="17sp" />

                                <EditText
                                    android:id="@+id/qsubjectedit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/qsubjecttext"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="0dp"
                                    android:textColor="#000000"
                                    android:textSize="17sp" />

                                <TextView
                                    android:id="@+id/qsujectobtainedmarkstext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/qsubjectedit"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:text="Obtained Marks"
                                    android:textColor="#000000"
                                    android:textSize="17sp" />

                                <EditText
                                    android:id="@+id/qsubjectobtainedmarkedit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/qsujectobtainedmarkstext"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="0dp"
                                    android:inputType="number"
                                    android:textColor="#000000"
                                    android:textSize="17sp" />

                                <TextView
                                    android:id="@+id/qsujectmaxmarkstext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/qsubjectobtainedmarkedit"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:text="Maximum Marks"
                                    android:textColor="#000000"
                                    android:textSize="17sp" />

                                <EditText
                                    android:id="@+id/qsubjectmaxmarkedit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/qsujectmaxmarkstext"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="0dp"
                                    android:inputType="number"
                                    android:textColor="#000000"
                                    android:textSize="17sp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="#F8F7F6">

                        <Button
                            android:id="@+id/backbtn"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="#3149CD"
                            android:text="Back" />
                        <Button
                            android:id="@+id/nxtbtn"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="300dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="#3149CD"
                            android:text="Next"
                            android:layout_marginLeft="300dp" />

                    </RelativeLayout>
                </LinearLayout>



            </RelativeLayout>
        </LinearLayout>



    </ScrollView>




</RelativeLayout>