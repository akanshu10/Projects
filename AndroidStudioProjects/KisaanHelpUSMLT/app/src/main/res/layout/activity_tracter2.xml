<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TracterActivity2">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="0dp">

                    <TextView
                        android:id="@+id/tokenno1"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="15dp"
                        android:text="आपका टोकन नंबर "
                        android:textColor="@color/colorAccent1"
                        android:textSize="19sp"
                        android:textStyle="italic"
                        tools:ignore="DuplicateIds"
                        android:layout_marginLeft="50dp" />
                    <TextView
                        android:id="@+id/buggitokenno"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/colorAccent1"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:layout_marginLeft="50dp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Troli_deshboard"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:background="@color/colorPrimaryDark"
                        android:padding="5dp"
                        android:text="टोकन डैशबोर्ड "
                        android:textColor="@color/colorAccent1"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="374dp"
                        android:layout_height="143dp"
                        android:layout_marginStart="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="353dp"
                                android:layout_height="45dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/current_weighted_trolley1"
                                    android:layout_width="140dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginEnd="10dp"
                                    android:gravity="center"
                                    android:text="अभी तुली ट्रॉली नंबर"
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="17sp"

                                    android:textStyle="italic"
                                    tools:ignore="DuplicateIds" />

                                <TextView
                                    android:id="@+id/current_weighted_trolley"
                                    android:layout_width="144dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="40dp"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="15sp"

                                    android:textStyle="italic" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="354dp"
                                android:layout_height="45dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="2dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/total_student1"
                                    android:layout_width="140dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0dp"
                                    android:gravity="center"
                                    android:text="अभी जारी हुआ टोकन "
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="17sp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/current_issue_token_number"
                                    android:layout_width="144dp"
                                    android:layout_height="44dp"
                                    android:layout_marginStart="50dp"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="15sp"

                                    android:textStyle="italic" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="354dp"
                                android:layout_height="45dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="2dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/total_student"
                                    android:layout_width="140dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0dp"
                                    android:gravity="center"
                                    android:text="आपका टोकन नंबर"
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="17sp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/yr_token_number"
                                    android:layout_width="144dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="50dp"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="15sp"
                                    android:textStyle="italic" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/Troli_deshboard11"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:background="@color/colorPrimaryDark"
                        android:padding="5dp"
                        android:text="ट्रॉली डैशबोर्ड "
                        android:textColor="@color/colorAccent1"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="374dp"
                        android:layout_height="143dp"
                        android:layout_marginStart="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="354dp"
                                android:layout_height="33dp"
                                android:layout_marginStart="20dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/total_troli1"
                                    android:layout_width="145dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0dp"
                                    android:gravity="center"
                                    android:text="प्लेटफॉर्म पर उपलब्ध कुल ट्रॉली "
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="13sp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/total_troli_on"
                                    android:layout_width="144dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="45dp"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="13sp"

                                    android:textStyle="italic" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="354dp"
                                android:layout_height="33dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="2dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/troli_btwn"
                                    android:layout_width="145dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0dp"
                                    android:gravity="center"
                                    android:text="आपके आगे कुल ट्रॉली"
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="13sp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/trolly_btwn"
                                    android:layout_width="144dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="45dp"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="13sp"

                                    android:textStyle="italic" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="354dp"
                                android:layout_height="33dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="2dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/missing_troli"
                                    android:layout_width="145dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0dp"
                                    android:gravity="center"
                                    android:text="तोल से छूटी ट्रॉली"
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="13sp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/missed_trolly_number"
                                    android:layout_width="144dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="45dp"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="13sp"
                                    android:textStyle="italic" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="354dp"
                                android:layout_height="33dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="2dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/locked_trolly"
                                    android:layout_width="145dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0dp"
                                    android:gravity="center"
                                    android:text=" लॉक ट्रॉली"
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="13sp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/loked_trolly"
                                    android:layout_width="144dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="45dp"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="13sp"
                                    android:textStyle="italic" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/Troli_deshboard1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:background="@color/colorPrimaryDark"
                        android:padding="5dp"
                        android:text="अलार्म डैशबोर्ड"
                        android:textColor="@color/colorAccent1"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="374dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="25dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/total_troli11"
                                    android:layout_width="145dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0dp"
                                    android:gravity="center"
                                    android:visibility="gone"
                                    android:text="अलार्म के लिए  दर्ज की गयी संख्या"
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="13sp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/total_troli_number11"
                                    android:layout_width="144dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="45dp"
                                    android:gravity="center"
                                    android:hint="दर्ज की गयी संख्या"
                                    android:maxLength="5"
                                    android:visibility="gone"
                                    android:inputType="number"
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="13sp"
                                    android:textStyle="italic" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="335dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginBottom="0dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn11"
                                    android:layout_width="334dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginEnd="25dp"
                                    android:gravity="center"
                                    android:visibility="gone"
                                    android:text="अलार्म रोके"
                                    android:textColor="#E40E3F"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="354dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="20dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/total_troli"
                                    android:layout_width="145dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0dp"
                                    android:gravity="center"
                                    android:text="संख्या दर्ज करे"
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="13sp"
                                    android:textStyle="italic" />

                                <EditText
                                    android:id="@+id/total_troli_number"
                                    android:layout_width="144dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="45dp"
                                    android:gravity="center"
                                    android:hint="यहाँ दर्ज करे"
                                    android:maxLength="5"
                                    android:inputType="number"
                                    android:textColor="@color/colorAccent1"
                                    android:textSize="13sp"
                                    android:textStyle="italic" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="335dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginBottom="40dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn"
                                    android:layout_width="334dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginEnd="25dp"
                                    android:gravity="center"
                                    android:text="अलार्म दर्ज करे"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                    <TextView
                        android:id="@+id/owner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:padding="5dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="Designed by:- Akanshu Rajput"
                        android:textColor="#0C0C0C"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </HorizontalScrollView>
</LinearLayout>