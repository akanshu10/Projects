<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".college.collegeprofileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="10dp"
        android:background="@color/back">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/backarrow"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:background="@color/back"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:gravity="center"
        android:text="Student dashboard"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="@color/back"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="50dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/home1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="350dp"
            android:gravity="center"
            android:drawableRight="@drawable/ic_home_black_24dp"
            android:background="@color/back"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="10dp" />


        <SearchView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="#FAF9F7"
            android:layout_marginEnd="10dp"
            />
    </RelativeLayout>


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="false"
            android:background="@color/back"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="140dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview12"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >
                                <ImageView
                                    android:id="@+id/imgaddstudent"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/addstudent"
                                    android:layout_centerInParent="true" />

                                <TextView
                                    android:id="@+id/addstudent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add New Student"
                                    android:layout_below="@+id/imgaddstudent"
                                    android:textSize="16sp"
                                    android:gravity="center_horizontal"
                                    android:textStyle="bold"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dp"
                                    />



                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:id="@+id/btnaddstudent" />

                                </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >
                                <ImageView
                                    android:id="@+id/imgblockstudent"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/blockstudent"
                                    android:layout_centerInParent="true" />

                                <TextView
                                    android:id="@+id/blockstudent"
                                    android:layout_below="@+id/imgblockstudent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Blocked student"
                                    android:textSize="16sp"
                                    android:gravity="center_horizontal"
                                    android:textStyle="bold"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dp"
                                    />

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:id="@+id/btnblockedstudent" />
                                </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="135dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardview13"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:orientation="vertical"
                                android:gravity="center">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    >
                                    <ImageView
                                        android:id="@+id/imgnewaddstudent"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/newaddmitted"
                                        android:layout_marginLeft="65dp" />

                                    <TextView
                                        android:id="@+id/newstudent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="New  admitted students"
                                        android:textSize="16sp"
                                        android:layout_below="@+id/imgnewaddstudent"
                                        android:gravity="center_horizontal"
                                        android:textStyle="bold"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="5dp"
                                        />

                                    <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        android:id="@+id/btnnewstudent" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardview14"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:orientation="vertical"
                                android:gravity="center">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    >

                                    <ImageView
                                        android:id="@+id/imgleftstudent"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/leftstudent"
                                        android:layout_marginLeft="65dp" />
                                    <TextView
                                        android:id="@+id/leftstudent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="left student"
                                        android:layout_below="@+id/imgleftstudent"
                                        android:textSize="16sp"
                                        android:gravity="center_horizontal"
                                        android:textStyle="bold"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="5dp"
                                        />

                                    <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        android:id="@+id/btnleftstudent" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="135dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardview15"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:orientation="vertical"
                                android:gravity="center">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    >
                                    <ImageView
                                        android:id="@+id/imgtotalstudent"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:src="@drawable/totalstudent"
                                        android:layout_centerInParent="true"/>
                                    <TextView
                                        android:id="@+id/totalstudent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Total students"
                                        android:textSize="16sp"
                                        android:layout_below="@+id/imgtotalstudent"
                                        android:textStyle="bold"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="5dp"
                                        />


                                    <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        android:id="@+id/btntotalstudent" />


                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardview16"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:orientation="vertical"
                                android:gravity="center">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                   >

                                    <ImageView
                                        android:id="@+id/imgtodaypresantstudent"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:src="@drawable/todaypresantstudent"
                                        android:layout_centerInParent="true"/>
                                    <TextView
                                        android:id="@+id/totalstudentp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Today prasant student"
                                        android:textSize="16sp"
                                        android:layout_below="@+id/imgtodaypresantstudent"
                                        android:gravity="center_horizontal"
                                        android:textStyle="bold"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="5dp"

                                        />

                                    <Button
                                        android:id="@+id/btnprasant"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginEnd="0dp"
                                        android:layout_marginRight="0dp"
                                        android:layout_marginBottom="0dp"
                                        android:background="@android:color/transparent" />


                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="135dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardview5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:orientation="vertical"
                                android:gravity="center">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    >
                                    <ImageView
                                        android:id="@+id/imgpassedstudent"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:src="@drawable/totalstudent"
                                        android:layout_centerInParent="true"/>
                                    <TextView
                                        android:id="@+id/passedstudent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Passed Out Students"
                                        android:textSize="16sp"
                                        android:layout_below="@+id/imgpassedstudent"
                                        android:textStyle="bold"
                                        android:gravity="center"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="5dp"
                                        />
                                    <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        android:id="@+id/btnpassedstudent" />




                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardview1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:orientation="vertical"
                                android:gravity="center">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    >

                                    <ImageView
                                        android:id="@+id/imgrestrictedstudent"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:src="@drawable/blockstudent"
                                        android:layout_centerInParent="true"/>
                                    <TextView
                                        android:id="@+id/restricted"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Restricted student"
                                        android:textSize="16sp"
                                        android:layout_below="@+id/imgrestrictedstudent"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="10dp"

                                        />

                                    <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        android:id="@+id/btnrestricted" />


                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                </LinearLayout>


                </RelativeLayout>
            </LinearLayout>



        </ScrollView>
    </RelativeLayout>
